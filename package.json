{
  "name": "magick-gui",
  "version": "1.0.0",
  "description": "ImageMagick 7 GUI - Format Converter & Crop Tool",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "prepare-resources": "powershell -ExecutionPolicy Bypass -File scripts/prepare-resources.ps1",
    "package": "powershell -ExecutionPolicy Bypass -Command \"$env:CSC_IDENTITY_AUTO_DISCOVERY='false'; npx electron-vite build; if ($LASTEXITCODE -ne 0) { exit 1 }; npx electron-builder; exit $LASTEXITCODE\"",
    "package:full": "powershell -ExecutionPolicy Bypass -Command \"$env:CSC_IDENTITY_AUTO_DISCOVERY='false'; & scripts/prepare-resources.ps1; if ($LASTEXITCODE -ne 0) { exit 1 }; npx electron-vite build; if ($LASTEXITCODE -ne 0) { exit 1 }; npx electron-builder; exit $LASTEXITCODE\"",
    "lint": "tsc --noEmit"
  },
  "keywords": ["imagemagick", "electron", "image-converter"],
  "author": "magick-gui",
  "license": "MIT",
  "dependencies": {
    "clsx": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.4"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.0.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vite": "^6.0.5"
  },
  "build": {
    "appId": "com.magick-gui.app",
    "productName": "MagickGUI",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "out/**/*",
      "!node_modules"
    ],
    "extraResources": [
      {
        "from": "resources/bin/magick",
        "to": "bin/magick",
        "filter": ["**/*"]
      },
      {
        "from": "resources/bin/rembg",
        "to": "bin/rembg",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MagickGUI"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}
